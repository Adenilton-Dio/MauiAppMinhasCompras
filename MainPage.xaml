<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.MainPage"
             Title="Minhas Compras">

    <VerticalStackLayout Padding="10">

        <!-- Campo de busca -->
        <SearchBar Placeholder="Busca de Produtos"
                   TextChanged="OnSearchTextChanged"/>

        <!-- Lista de produtos -->
        <CollectionView x:Name="ProdutosView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5" ColumnDefinitions="50,*,80,60,100">
                        <Label Grid.Column="0" Text="{Binding Id}" />
                        <Label Grid.Column="1" Text="{Binding Descricao}" />
                        <Label Grid.Column="2" Text="{Binding Preco}" />
                        <Label Grid.Column="3" Text="{Binding Quantidade}" />
                        <Label Grid.Column="4" Text="{Binding Total}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
